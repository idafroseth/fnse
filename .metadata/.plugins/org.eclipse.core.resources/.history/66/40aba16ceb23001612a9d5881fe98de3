package no.mil.fnse.service;

import java.net.InetAddress;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import no.mil.fnse.core.model.GlobalConfiguration;
import no.mil.fnse.core.model.Router;
import no.mil.fnse.core.model.TunnelInterface;
import no.mil.fnse.core.service.RepositoryService;

@Component("defaultAutoconfSerivice")
public class DefaultAutconfService implements AutoconfigurationService {

	
	@Autowired
	RepositoryService repoService;

	@Override
	public TunnelInterface getTunnelInterface(String localIp, String remoteIp) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public GlobalConfiguration getGlobalConfiguration(String localIp, String remoteIp) {
		InetAddress local = InetAddress.getByName(localIp);
		repoService.getNetworkInterfaceByIp(localIp);
		Router router =  repoService.getRouterByRemotePeer(repoService.getPeerByIp(localIp, remoteIp).getId());
		return router.getGlobalConfiguration();
	}
	
}
