package no.mil.fnse.southbound.model.configuration;

import java.util.Collection;

import javax.persistence.Entity;
import javax.persistence.Table;

import com.fasterxml.jackson.annotation.JsonIgnore;

import no.mil.fnse.southbound.model.NetworkInterface;

/**
 * 
 * @author Ida Marie Fr√∏seth
 * @version $Id: Router.java 29 2016-05-25 19:28:08Z idamfro $
 */
@Entity
@Table(name="router")
public class MsdpConfig {
	
	@JsonIgnore
	private NetworkInterface loopbackInterface;
	
	private String peerAddress;
	
	@JsonIgnore
	private Collection<String> peer;
	

	// -------------------------------------------------------------------------
    // Hashcode And Equals
    // -------------------------------------------------------------------------
	
	@Override
	public int hashCode() {
		final int prime = 31;
		int result = 1;
		result = prime * result + ((peerAddress == null) ? 0 : peerAddress.hashCode());
		return result;
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		MsdpConfig other = (MsdpConfig) obj;
		if (peerAddress == null) {
			if (other.peerAddress != null)
				return false;
		} else if (!peerAddress.equals(other.peerAddress))
			return false;
		return true;
	}

	// -------------------------------------------------------------------------
    // Setters and getters
    // -------------------------------------------------------------------------
	
	public NetworkInterface getLoopbackInterface() {
		return loopbackInterface;
	}

	public void setLoopbackInterface(NetworkInterface loopbackInterface) {
		this.loopbackInterface = loopbackInterface;
	}

	public String getPeerAddress() {
		return loopbackInterface.getIpAddress().getAddress().toString().substring(1);
	}

	public void setPeerAddress(String peerAddress) {
		this.peerAddress = loopbackInterface.getIpAddress().getAddress().toString().substring(1);
	}

	public Collection<String> getPeer() {
		return peer;
	}

	public void setPeer(Collection<String> peer) {
		this.peer = peer;
	}
	
	
	
	
	
	
	
	
	
	
	

}
