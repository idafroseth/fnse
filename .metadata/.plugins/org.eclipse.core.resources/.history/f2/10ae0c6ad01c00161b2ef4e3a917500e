package no.mil.fnse.service;

import no.mil.fnse.model.Peer;

public interface DiscoveryService {


	void discoverdNeighbor(Peer neighbor);
	
	/**
	 * Update the database entry of the controller with the neighbor
	 * @param neighbor
	 */
	void updateController(Peer neighbor);
	
	
	/**
	 * Update the databaseentry of the neighbor with the controller IP
	 * @param neighbor
	 */
	void addControllerToNeighbor(Peer neighbor);
	 
	
	/**
	 * Update the neighbor controller and the timetamp
	 * @param neighbor
	 */
	void updateNeighbor(Peer neighbor);
}
