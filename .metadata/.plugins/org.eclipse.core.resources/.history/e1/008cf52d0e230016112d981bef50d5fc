package no.mil.fnse.southbound.model.configuration;

import javax.persistence.Column;
import javax.persistence.GeneratedValue;
import javax.persistence.Id;

import com.fasterxml.jackson.annotation.JsonIgnore;

public class NtpConfig {
	@JsonIgnore
	private int id;
	
	private String peerAddress;

	@Id
	@GeneratedValue
	@Column(name = "NTPCONFIG_ID", unique = true, nullable = false)
	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	@Column(name="PEER_ADDRESS", nullable=false)
	public String getPeerAddress() {
		return loopbackInterface.getIpAddress().getAddress().toString().substring(1);
	}

	public void setPeerAddress(String peerAddress) {
		this.peerAddress = loopbackInterface.getIpAddress().getAddress().toString().substring(1);
	}
}
