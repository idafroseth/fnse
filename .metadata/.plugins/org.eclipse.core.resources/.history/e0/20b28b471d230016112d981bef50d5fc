package no.mil.fnse.dao;

import static org.junit.Assert.assertNotNull;

import java.net.InetAddress;
import java.net.UnknownHostException;

import org.junit.Before;
import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.test.context.ContextConfiguration;
import org.springframework.test.context.junit4.SpringJUnit4ClassRunner;

import no.mil.fnse.model.Router;
import no.mil.fnse.repository.RouterDAO;

@RunWith(SpringJUnit4ClassRunner.class)
@ContextConfiguration(classes = no.mil.fnse.configuration.RootConfig.class)
public class RouterDAOTest {
	
	@Autowired
	RouterDAO hibernateRouterDAO = null;
	
	Router router;
	
	@Before 
	public void init(){
		
		InetAddress mngIp = null;
		try {
			mngIp = InetAddress.getByName("47.1.1.1");
		} catch (UnknownHostException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		router = new Router(mngIp, "username", "password");
		
	}
	
	@Test
	public void routerIsInjected() {
		assertNotNull("hibernateRouterDAO is injected " + hibernateRouterDAO);
	}
	

}
